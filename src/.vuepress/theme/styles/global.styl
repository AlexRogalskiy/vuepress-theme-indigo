img
  max-width 100%

ol.reset,
ul.reset
  list-style none
  li
    list-style none

.application--wrap
  background $body-background

.blog-container
  max-width $container-max-width!important

.capitalize
  text-transform: capitalize

.fake-hide
  position: absolute;
  top: -9999px;
  right: -9999px;
  z-index: -1;
  height: 1px;
  width: 1px;
  margin: -1px;
  padding: 0;
  border: none;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  opacity: 0;
